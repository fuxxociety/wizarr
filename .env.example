# Wizarr Environment Configuration
# Copy this file to .env and configure your settings

# Timezone (default: UTC)
TZ=UTC

# Flask Environment (production or development)
FLASK_ENV=production

# Stripe Configuration (Optional - can also be configured via Settings UI)
# Get your keys from https://dashboard.stripe.com/apikeys
# Note: These can be left empty and configured through the web UI at /admin#settings > Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Optional: Enable automatic Stripe backfill (syncs all Stripe data every minute)
# STRIPE_SYNC_BACKFILL_ENABLED=true

# Optional: Enable scheduler for development testing
# WIZARR_ENABLE_SCHEDULER=true

# Optional: Enable Plus features (if available)
# WIZARR_PLUS_ENABLED=false

# Optional: Force a specific language
# FORCE_LANGUAGE=en

# Logging Level (default: WARNING)
# Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL
# DEBUG enables verbose output including Gunicorn debug prints
# LOG_LEVEL=WARNING
